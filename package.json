  },
  "homepage": "https://github.com/collapp-zpi/emailMicroservice#readme",
  "devDependencies": {
    "@types/amqplib": "^0.8.2",
    "@types/express": "^4.17.13",
    "@types/node": "^16.10.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@types/nodemailer": "^6.4.4",
    "amqplib": "^0.8.0",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
