{
  "name": "emailmicroservice",
  "version": "1.0.0",
  "description": "A node based email microservice for Collapp project",
  "main": "src/server.js",
  "scripts": {
    "start": "node build/index.js",
    "dev": "doppler run --command=\"npm run run\"",
    "dev:debug": "doppler run --command=\"npm run run:debug\"",
